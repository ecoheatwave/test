def water_heater(initial_temp):
    current_temp = initial_temp
    
    print("Water Heater started. Initial temperature:", initial_temp, "째C")
    
    while current_temp < 100:
        current_temp += 1
        print("Heating... Current temperature:", current_temp, "째C")
        if current_temp == 100:
            print("Water temperature reached 100째C. Heating stopped.")
            break

initial_temperature = float(input("Enter the initial water temperature in 째C: "))
water_heater(initial_temperature)
